{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2020"],
        "types": ["node", "jest"],
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "declarationMap": true,
        "composite": true
    },
    
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "logs"]
}